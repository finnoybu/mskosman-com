---
import MainLayout from '@layouts/MainLayout.astro';

const canonicalUrl = 'https://mskosman.com/404';
---

<MainLayout
  title="Page Not Found - mskosman.com"
  description="The page you're looking for could not be found"
  canonical={canonicalUrl}
>
  <div class="max-w-4xl mx-auto text-center py-16">
    <div class="mb-8">
      <h1 class="text-6xl font-bold text-gray-900 dark:text-gray-100 mb-4">404</h1>
      <h2 class="text-2xl font-semibold text-gray-700 dark:text-gray-300 mb-4">
        Page Not Found
      </h2>
      <p class="text-gray-600 dark:text-gray-400 mb-8">
        The page you're looking for doesn't exist or has been moved.
      </p>
    </div>

    <div class="space-y-4">
      <a
        href="/"
        class="inline-block px-6 py-3 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors"
      >
        Go to Home
      </a>
      <div class="flex flex-col sm:flex-row gap-4 justify-center mt-8">
        <a
          href="/subjects"
          class="px-6 py-2 border border-primary-600 text-primary-600 rounded-lg hover:bg-primary-50 dark:hover:bg-primary-950 transition-colors"
        >
          Browse by Subject
        </a>
        <a
          href="/grades"
          class="px-6 py-2 border border-primary-600 text-primary-600 rounded-lg hover:bg-primary-50 dark:hover:bg-primary-950 transition-colors"
        >
          Browse by Grade
        </a>
      </div>
    </div>

    <div class="mt-16 p-6 rounded-lg bg-gray-50 dark:bg-gray-800">
      <h3 class="font-semibold text-gray-900 dark:text-gray-100 mb-2">
        Looking for something specific?
      </h3>
      <p class="text-gray-600 dark:text-gray-400 mb-4">
        Try using our search feature to find lessons by subject, grade, or topic.
      </p>
      <a
        href="/#search-input"
        class="text-primary-600 hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300 font-medium"
      >
        Go to Search â†’
      </a>
    </div>
  </div>
</MainLayout>
