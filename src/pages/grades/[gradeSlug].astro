---
import MainLayout from '@layouts/MainLayout.astro';
import LessonCard from '@components/LessonCard.astro';
import { getCollection } from 'astro:content';
import { GRADES, GRADE_LABELS, type Grade } from '@lib/constants';

export async function getStaticPaths() {
  const allLessons = await getCollection('lessons');
  
  return GRADES.map((grade) => ({
    params: { gradeSlug: grade },
    props: {
      grade,
      lessons: allLessons
        .filter((lesson) => lesson.data.grade === grade)
        .sort((a, b) => a.data.subject.localeCompare(b.data.subject)),
    },
  }));
}

const { grade, lessons } = Astro.props;
---

<MainLayout title={`${GRADE_LABELS[grade]} Lessons - mskosman.com`}>
  <div class="max-w-6xl mx-auto">
    <div class="mb-8">
      <a
        href="/grades"
        class="text-primary-600 hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300 mb-4 inline-block"
      >
        ‚Üê Back to Grades
      </a>
      <h1 class="text-4xl font-bold text-gray-900 dark:text-gray-100 mb-2">
        {GRADE_LABELS[grade]}
      </h1>
      <p class="text-gray-600 dark:text-gray-300">
        {lessons.length} lesson{lessons.length !== 1 ? 's' : ''} available
      </p>
    </div>

    {lessons.length > 0 ? (
      <LessonCard lessons={lessons} />
    ) : (
      <div class="text-center py-12">
        <p class="text-gray-500 dark:text-gray-400">
          No lessons available yet for this grade.
        </p>
      </div>
    )}
  </div>
</MainLayout>
