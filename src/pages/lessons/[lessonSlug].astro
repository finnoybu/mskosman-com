---
import MainLayout from '@layouts/MainLayout.astro';
import { getCollection } from 'astro:content';
import { GRADE_LABELS, SUBJECT_SLUGS } from '@lib/constants';
import type { CollectionEntry } from 'astro:content';

export async function getStaticPaths() {
  const lessons = await getCollection('lessons');
  return lessons.map((lesson) => ({
    params: { lessonSlug: lesson.slug },
    props: { lesson },
  }));
}

interface Props {
  lesson: CollectionEntry<'lessons'>;
}

const { lesson } = Astro.props;
const { Content } = await lesson.render();
const { data } = lesson;

// Fetch matching standards for this lesson's subject and grade
const allStandards = await getCollection('standards');
const matchingStandards = allStandards.filter(
  (standard) => 
    standard.data.subject === data.subject && 
    standard.data.grade === data.grade
);

// Generate canonical URL
const canonicalUrl = `https://mskosman.com/lessons/${lesson.slug}`;
---

<MainLayout
  title={`${data.title} - mskosman.com`}
  description={data.objective}
  canonical={canonicalUrl}
>
  <article class="max-w-4xl mx-auto">
    <div class="mb-8">
      <a
        href={`/subjects/${SUBJECT_SLUGS[data.subject]}`}
        class="text-primary-600 hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300 inline-block mb-4"
      >
        ← Back to {data.subject}
      </a>
      
      <div class="flex gap-2 mb-4">
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-primary-100 text-primary-800 dark:bg-primary-900 dark:text-primary-200">
          {data.subject}
        </span>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-200">
          {GRADE_LABELS[data.grade]}
        </span>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-200">
          {data.durationMinutes} minutes
        </span>
      </div>

      <h1 class="text-4xl font-bold text-gray-900 dark:text-gray-100 mb-4">
        {data.title}
      </h1>

      <div class="mb-6 p-4 rounded-lg bg-gray-50 dark:bg-gray-800 border border-border">
        <h2 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-2">
          Objective
        </h2>
        <p class="text-gray-700 dark:text-gray-300">{data.objective}</p>
      </div>

      <div class="grid md:grid-cols-2 gap-6 mb-8">
        <div class="p-4 rounded-lg bg-white dark:bg-gray-800 border border-border">
          <h3 class="font-semibold text-gray-900 dark:text-gray-100 mb-2">Materials</h3>
          <ul class="list-disc list-inside text-gray-700 dark:text-gray-300 space-y-1">
            {data.materials.map((item) => (
              <li>{item}</li>
            ))}
          </ul>
        </div>

        <div class="p-4 rounded-lg bg-white dark:bg-gray-800 border border-border">
          <h3 class="font-semibold text-gray-900 dark:text-gray-100 mb-2">Prerequisites</h3>
          <ul class="list-disc list-inside text-gray-700 dark:text-gray-300 space-y-1">
            {data.prerequisites.length > 0 ? (
              data.prerequisites.map((item) => (
                <li>{item}</li>
              ))
            ) : (
              <li>None</li>
            )}
          </ul>
        </div>
      </div>

      <div class="mb-6">
        <h3 class="font-semibold text-gray-900 dark:text-gray-100 mb-2">SOL Codes</h3>
        <div class="flex flex-wrap gap-2">
          {data.solCodes.map((code) => (
            <span class="px-2 py-1 text-sm rounded bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300">
              {code}
            </span>
          ))}
        </div>
      </div>

      {data.tags.length > 0 && (
        <div class="mb-8">
          <h3 class="font-semibold text-gray-900 dark:text-gray-100 mb-2">Tags</h3>
          <div class="flex flex-wrap gap-2">
            {data.tags.map((tag) => (
              <span class="px-2 py-1 text-sm rounded bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300">
                #{tag}
              </span>
            ))}
          </div>
        </div>
      )}

      {(data.standardsLinks.length > 0 || matchingStandards.length > 0) && (
        <div class="mb-8 p-6 rounded-lg bg-blue-50 dark:bg-blue-950/20 border border-blue-200 dark:border-blue-900">
          <h3 class="text-xl font-semibold text-gray-900 dark:text-gray-100 mb-4">
            Standards & Resources
          </h3>
          
          {data.standardsLinks.length > 0 && (
            <div class="mb-4">
              <h4 class="font-medium text-gray-900 dark:text-gray-100 mb-2">Quick Links</h4>
              <ul class="space-y-1">
                {data.standardsLinks.map((link) => (
                  <li>
                    <a
                      href={link.url}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-primary-600 hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300"
                    >
                      {link.label} →
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          )}

          {matchingStandards.length > 0 && (
            <div class="space-y-4">
              {matchingStandards.map((standard) => (
                <div class="border-t border-blue-200 dark:border-blue-900 pt-4 first:border-t-0 first:pt-0">
                  <h4 class="font-medium text-gray-900 dark:text-gray-100 mb-2">
                    {standard.data.subject} - {GRADE_LABELS[standard.data.grade]}
                    {standard.data.strand && ` (${standard.data.strand})`}
                  </h4>
                  
                  {standard.data.solDocLinks.length > 0 && (
                    <div class="mb-3">
                      <p class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
                        Virginia SOL Documents:
                      </p>
                      <ul class="text-sm space-y-1">
                        {standard.data.solDocLinks.map((link) => (
                          <li>
                            <a
                              href={link.url}
                              target="_blank"
                              rel="noopener noreferrer"
                              class="text-primary-600 hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300"
                            >
                              {link.label} →
                            </a>
                          </li>
                        ))}
                      </ul>
                    </div>
                  )}

                  {standard.data.instructionalResources && standard.data.instructionalResources.length > 0 && (
                    <div class="mb-3">
                      <p class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
                        Instructional Resources:
                      </p>
                      <ul class="text-sm space-y-1">
                        {standard.data.instructionalResources.map((resource) => (
                          <li>
                            <a
                              href={resource.url}
                              target="_blank"
                              rel="noopener noreferrer"
                              class="text-primary-600 hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300"
                            >
                              {resource.label} →
                            </a>
                          </li>
                        ))}
                      </ul>
                    </div>
                  )}

                  {standard.data.notes && (
                    <p class="text-sm text-gray-600 dark:text-gray-400 italic">
                      {standard.data.notes}
                    </p>
                  )}
                </div>
              ))}
            </div>
          )}

          <p class="mt-4 text-xs text-gray-600 dark:text-gray-400 italic">
            <strong>Note:</strong> Standards information is supplementary. Always verify with the latest official Virginia SOL documents at 
            <a 
              href="https://www.doe.virginia.gov/teaching-learning-assessment/student-assessment/standards-learning"
              target="_blank"
              rel="noopener noreferrer"
              class="text-primary-600 hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300 underline"
            >
              doe.virginia.gov
            </a>.
          </p>
        </div>
      )}
    </div>

    <div class="prose prose-lg dark:prose-invert max-w-none">
      <Content />
    </div>

    <div class="mt-8 text-sm text-gray-500 dark:text-gray-400">
      Last updated: {data.updatedAt.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
    </div>
  </article>
</MainLayout>

<style>
  .prose {
    @apply text-gray-700 dark:text-gray-300;
  }
  .prose :global(h2) {
    @apply text-2xl font-bold text-gray-900 dark:text-gray-100 mt-8 mb-4;
  }
  .prose :global(h3) {
    @apply text-xl font-semibold text-gray-900 dark:text-gray-100 mt-6 mb-3;
  }
  .prose :global(ul) {
    @apply list-disc list-inside space-y-2;
  }
  .prose :global(p) {
    @apply mb-4;
  }
</style>
