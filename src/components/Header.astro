---
import { SUBJECTS, SUBJECT_SLUGS, GRADES, GRADE_LABELS } from '@lib/constants';
import ThemeSwitcher from './ThemeSwitcher.astro';
import ViewToggle from './ViewToggle.astro';

const currentPath = Astro.url.pathname;
---

<header class="border-b border-border bg-background sticky top-0 z-50">
  <div class="container mx-auto px-4 py-4">
    <div class="flex items-center justify-between mb-4">
      <a href="/" class="text-2xl font-bold text-primary-600 dark:text-primary-400">
        mskosman.com
      </a>
      <div class="flex items-center gap-4">
        <ThemeSwitcher />
      </div>
    </div>
    
    <nav class="flex items-center justify-between">
      <div class="flex items-center gap-6">
        <a
          href="/"
          class:list={[
            'text-sm font-medium transition-colors hover:text-primary-600',
            currentPath === '/' ? 'text-primary-600' : 'text-gray-600 dark:text-gray-300'
          ]}
        >
          Home
        </a>
        <a
          href="/subjects"
          class:list={[
            'text-sm font-medium transition-colors hover:text-primary-600',
            currentPath.startsWith('/subjects') ? 'text-primary-600' : 'text-gray-600 dark:text-gray-300'
          ]}
        >
          Subjects
        </a>
        <a
          href="/grades"
          class:list={[
            'text-sm font-medium transition-colors hover:text-primary-600',
            currentPath.startsWith('/grades') ? 'text-primary-600' : 'text-gray-600 dark:text-gray-300'
          ]}
        >
          Grades
        </a>
      </div>
      <ViewToggle />
    </nav>
  </div>
</header>
