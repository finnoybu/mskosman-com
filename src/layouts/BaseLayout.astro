---
import Meta from '@components/Meta.astro';
import SkipToContent from '@components/SkipToContent.astro';

interface Props {
  title?: string;
  description?: string;
  canonical?: string;
}

const {
  title = 'mskosman.com',
  description = 'Homeschool, tutoring, and extracurricular lesson plans aligned to Virginia DOE Kâ€“12 Standards of Learning',
  canonical,
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <Meta title={title} description={description} canonical={canonical} />
  </head>
  <body class="min-h-screen">
    <SkipToContent />
    <slot />
    <script>
      // Theme switcher
      const theme = localStorage.getItem('theme') || 'light';
      document.documentElement.setAttribute('data-theme', theme);

      window.addEventListener('theme-change', ((e: CustomEvent) => {
        const newTheme = e.detail.theme;
        document.documentElement.setAttribute('data-theme', newTheme);
        localStorage.setItem('theme', newTheme);
      }) as EventListener);
    </script>
  </body>
</html>
